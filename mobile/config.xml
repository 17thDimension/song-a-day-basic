<?xml version='1.0' encoding='utf-8'?>
<widget id="paulwand.Song-A-Day" version="0.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Song A Day</name>
    <description>
        Song a Day BBY
    </description>
    <author email="hello@paulwand.com" href="http://17thDimension.com">
        17th Dimension
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="*.firebaseio.com" />
    <allow-intent href="auth.firebase.com" />
    <access origin="*.firebaseio.com" />
    <access origin="auth.firebase.com" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <preference name="StatusBarOverlaysWebView" value="false" />
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
</widget>
